<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miroshnychenko.mykola.popularmovies.fragments.MoviesFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_movies_main_rv"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_movies_no_network_tv"
        android:visibility="gone"
        android:text="@string/fragment_movies_no_network"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</FrameLayout>
